#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Conventional commit message validation
# Enforces format: type(scope): description
# Examples:
#   feat: add WiFi scanning
#   fix(api): handle connection timeout
#   docs: update README

commit_regex='^(feat|fix|docs|style|refactor|perf|test|chore)(\(.+\))?: .{1,50}'

if ! grep -qE "$commit_regex" "$1"; then
    echo "‚ùå Invalid commit message format!"
    echo ""
    echo "‚úÖ Commit message must follow conventional commits format:"
    echo "   type(scope): description"
    echo ""
    echo "üìã Allowed types:"
    echo "   ‚Ä¢ feat:     new feature"
    echo "   ‚Ä¢ fix:      bug fix"
    echo "   ‚Ä¢ docs:     documentation"
    echo "   ‚Ä¢ style:    formatting, missing semicolons, etc"
    echo "   ‚Ä¢ refactor: code change that neither fixes a bug nor adds a feature"
    echo "   ‚Ä¢ perf:     performance improvement"
    echo "   ‚Ä¢ test:     adding tests"
    echo "   ‚Ä¢ chore:    maintenance, dependencies, etc"
    echo ""
    echo "üí° Examples:"
    echo "   feat: add WiFi network scanning"
    echo "   fix(api): handle connection timeout errors"
    echo "   docs: update development guide"
    echo ""
    exit 1
fi
