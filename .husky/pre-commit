#!/usr/bin/env sh

# Get current branch name
BRANCH=$(git rev-parse --abbrev-ref HEAD)

echo "🔍 Running pre-commit checks on branch: $BRANCH"

# Check if we're in the new frontend structure
if [ -d "frontend" ] && [ -f "frontend/package.json" ]; then
  echo "📝 Running frontend lint checks..."
  cd frontend

  # Run ESLint with auto-fix
  npm run lint:fix
  if [ $? -ne 0 ]; then
    echo "❌ Frontend linting failed. Please fix the issues above."
    exit 1
  fi

  # Run TypeScript checking
  echo "🔍 Running TypeScript type checking..."
  npm run check
  if [ $? -ne 0 ]; then
    echo "❌ TypeScript checking failed. Please fix the issues above."
    exit 1
  fi

  cd ..
  echo "✅ Frontend checks passed"
fi

# Check backend if it exists
if [ -d "backend" ] && [ -f "backend/requirements.txt" ]; then
  echo "🐍 Checking backend formatting..."
  if command -v black >/dev/null 2>&1; then
    black backend/ --check
    if [ $? -ne 0 ]; then
      echo "❌ Backend code formatting failed. Run 'black backend/' to fix."
      exit 1
    fi
  else
    echo "⚠️  Black not installed, skipping backend formatting check"
  fi
  echo "✅ Backend checks passed"
fi

# Branch-specific checks
if [ "$BRANCH" = "main" ]; then
  echo "🏭 Main branch detected - running additional validation..."

  # Test build for main branch
  if [ -d "frontend" ]; then
    echo "🔨 Testing production build..."
    cd frontend
    npm run build
    if [ $? -ne 0 ]; then
      echo "❌ Production build failed on main branch."
      exit 1
    fi
    cd ..
  fi

  echo "✅ Full validation complete for main branch"

elif [ "$BRANCH" = "develop" ]; then
  echo "🚀 Develop branch detected - running standard checks..."
  echo "✅ Standard validation complete for develop branch"

else
  echo "🌿 Feature branch detected - basic checks completed"
  echo "💡 Switch to develop branch for more comprehensive validation"
fi

echo "🎉 Pre-commit checks completed successfully!"
