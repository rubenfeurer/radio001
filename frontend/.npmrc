# NPM Configuration for Radio WiFi Frontend
# Optimized for cross-platform development and CI/CD

# Force specific architecture to avoid ARM64 issues in CI
target_arch=x64
target_platform=linux

# Cache configuration for faster installs
cache-min=86400
audit=false

# Registry settings
registry=https://registry.npmjs.org/

# Optional dependencies handling (for Rollup native binaries)
optional=true

# Production optimizations
fund=false
audit-level=moderate

# Lockfile settings
package-lock=true
save-exact=false

# Install behavior
save=true
save-dev=false

# Progress settings (useful for CI)
progress=true
loglevel=warn

# Engine strict checking
engine-strict=true
