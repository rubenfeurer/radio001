# NPM Configuration for Radio WiFi Frontend
# Optimized for workspace compatibility and cross-platform development

# Registry settings
registry=https://registry.npmjs.org/

# Cache configuration for faster installs
cache-min=86400
audit=false

# Production optimizations
fund=false
audit-level=moderate

# Lockfile settings
package-lock=true
save-exact=false

# Install behavior
save=true
save-dev=false

# Progress settings (useful for CI)
progress=true
loglevel=warn

# Engine strict checking
engine-strict=true

# Optional dependencies handling - allow npm to handle architecture-specific binaries
optional=true
